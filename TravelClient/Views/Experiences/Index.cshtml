<h1>All Locations:</h1>

<ol>
@foreach (Location location in Model)
{
  <ul>
    <li>ID: @location.LocationId</li>
    <li>Author: @location.Author</li>
    <li>Review: @location.Review</li>
    <li>Rating: @location.Rating</li>
    <li>Location ID: @location.LocationId</li>
  </ul>
  <a href="/Locations/Details/@(location.LocationId)"><p>View Details</p></a>
  <br>
}
</ol>