@{
  Layout = "_Layout";
}

@model TravelClient.Models.Experience
@using TravelClient.Models;

@using (Html.BeginForm())
{
  @Html.Label("Author Name:")
  @Html.TextBoxFor(model => model.Author, new { @required="required"})
  @Html.Label("Select Location")
  @Html.DropDownList("LocationId")
  @Html.Label("Rating on a scale of 1-5:")
  @Html.TextBoxFor(model => model.Rating, new { @required="required"})
  @Html.Label("Review:")
  @Html.TextBoxFor(model => model.Review, new { @required="required"})
  <br>
  <input type="submit" value="Add this review" class="btn"/>
}